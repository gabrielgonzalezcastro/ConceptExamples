@using System.Web.Optimization
@using System.Web.UI.WebControls
<!DOCTYPE html>
<html ng-app="BookApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Books Online</title>
    
        @Styles.Render("~/content/site")
        @Scripts.Render("~/bundles/modernizr")

        @RenderSection("styles", required: false)
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#/Home">Book Store</a>
                <div class="nav-collapse">
                    <ul class="nav navbar-nav">
                        <li><a class="pull-right btn btn-link" href="/#/Home">Home</a></li>
                        <li><a class="pull-right btn btn-link" href="/#/Books">Books</a></li>
                        <li><a class="pull-right btn btn-link" href="/Home/Google">Go to Google</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container">
            @RenderBody()
            
            <hr /> 
            <footer>
                <p>&copy; Online Book Store 2013</p>
            </footer>
        </div>
        
        @Scripts.Render(
                        "~/bundles/framework",
                        "~/bundles/app")

     @RenderSection("scripts", required: false)
    </body>
</html>